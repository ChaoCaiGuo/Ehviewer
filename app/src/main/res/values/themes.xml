<resources>

    <!-- ========== -->
    <!-- Base Theme -->
    <!-- ========== -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="colorDivider">@color/divider_light</item>
        <item name="colorToolbar">@color/colorPrimary</item>
        <item name="colorDrawableOpposite">@color/primary_drawable_light</item>
        <item name="colorDrawablePrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent"/>

    <!-- =============== -->
    <!-- Base Dark Theme -->
    <!-- =============== -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="colorDivider">@color/divider_dark</item>
        <item name="colorToolbar">?android:attr/colorBackground</item>
        <item name="colorDrawableOpposite">@color/primary_drawable_dark</item>
        <item name="colorDrawablePrimary">@color/primary_drawable_dark</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar.Translucent"/>

    <!-- =============== -->
    <!-- Base Black Theme -->
    <!-- =============== -->
    <style name="AppTheme.Black" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <item name="colorDivider">@color/divider_dark</item>
        <item name="colorToolbar">?android:attr/colorBackground</item>
        <item name="colorDrawableOpposite">@color/primary_drawable_dark</item>
        <item name="colorDrawablePrimary">@color/primary_drawable_dark</item>
    </style>

    <style name="AppTheme.Black.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Black.NoActionBar.Translucent"/>

    <!-- ========= -->
    <!-- App Theme -->
    <!-- ========= -->
    <style name="AppTheme.Main" parent="AppTheme.NoActionBar.Translucent"/>

    <style name="AppTheme.Main.Dark" parent="AppTheme.Dark.NoActionBar.Translucent"/>

    <style name="AppTheme.Main.Black" parent="AppTheme.Black.NoActionBar.Translucent"/>

    <style name="AppTheme.Toolbar" parent="AppTheme.NoActionBar"/>

    <style name="AppTheme.Toolbar.Dark" parent="AppTheme.Dark.NoActionBar"/>

    <style name="AppTheme.Toolbar.Black" parent="AppTheme.Black.NoActionBar"/>

    <style name="AppTheme.Gallery" parent="AppTheme.Dark.NoActionBar"/>

    <style name="AppTheme.Gallery.Dark" parent="AppTheme.Dark.NoActionBar"/>

    <style name="AppTheme.Gallery.Black" parent="AppTheme.Black.NoActionBar"/>

    <style name="AppTheme.Settings" parent="AppTheme"/>

    <style name="AppTheme.Settings.Dark" parent="AppTheme.Dark"/>

    <style name="AppTheme.Settings.Black" parent="AppTheme.Black"/>

    <!-- ============ -->
    <!-- Widget Theme -->
    <!-- ============ -->
    <style name="CommentEditText" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
