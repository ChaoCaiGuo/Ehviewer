<resources>

    <!-- ========== -->
    <!-- Base Theme -->
    <!-- ========== -->

    <style name="Base.AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="dividerColor">@color/divider</item>
        <item name="drawableColorSecondary">?attr/colorOnSurface</item>
        <item name="drawableColorThemePrimary">?attr/colorPrimary</item>
        <item name="tagGroupBackgroundColor">?attr/colorSecondary</item>
        <item name="tagBackgroundColor">?attr/colorTertiary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch
        </item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
    </style>

    <style name="ThemeOverlay" />

    <style name="ThemeOverlay.Black">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="toolbarColor">@android:color/black</item>
        <item name="dividerColor">@color/divider_black</item>
        <item name="drawableColorSecondary">@color/secondary_drawable_black</item>
        <item name="drawableColorThemePrimary">@color/primary_drawable_black</item>
    </style>

    <!-- ============ -->
    <!-- Widget Theme -->
    <!-- ============ -->

    <style name="RatingBarTheme" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">@color/yellow_800</item>
        <item name="colorControlActivated">@color/yellow_800</item>
    </style>
</resources>
